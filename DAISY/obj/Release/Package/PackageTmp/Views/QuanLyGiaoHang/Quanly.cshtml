                                                    <a href="@Url.Action("HuyQL","QuanLyGiaoHang", new {@id = item.gh.IDGIOHANG})" class="btn btn-danger">Xác nhận</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else if (item.gh.TRANGTHAI == "Đã hủy")
                                {
                                    <h6 style="color:red; font-weight:700">@item.gh.TRANGTHAI</h6>
                                }
                                else
                                {
                                    <h6 style="color:green; font-weight:700">@item.gh.TRANGTHAI</h6>
                                }

                            </td>
                            <td>
                                <a href="@Url.Action("Chitiet", "GioHangChiTiet", new { @id = item.gh.IDGIOHANG })">Xem chi tiết</a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
            <div class="col-3">
                <div class="card card-hover" style="position:fixed; width:20rem; padding:2rem; margin-top:2.5rem">
                    <h4 style="color: black; font-weight: 700">TẤT CẢ</h4>
