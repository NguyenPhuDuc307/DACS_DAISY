@model DAISY.Models.tb_KICHCO

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-4">
        <div class="card" style="position:fixed; width:20rem; padding:2rem">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.IDKICHCO)

                    <div class="form-group mb-3">
                        Tên kích cỡ
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TENKICHCO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TENKICHCO, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        Thể tích - kích cỡ
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.THETICH_TRONGLUONG, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.THETICH_TRONGLUONG, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Lưu thay đổi" class="btn btn-danger" />
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>

        <div class="col-6">
            <h4 style="font-weight:700">CẬP NHẬT KÍCH CỠ</h4>
            @Html.ActionLink("Trở về", "Index", "QuanLyAdmin")
            <hr />
            <a href="@Url.Action("Create")" style="text-decoration:none">
                Thêm mới
            </a>
            <table class="table table-bordered table-hover">
                <tr style="font-size:20px; color: red">
                    <th>
                        KÍCH CỠ
                    </th>
                    <th>
                        THỂ TÍCH - TRỌNG LƯỢNG
                    </th>
                </tr>

                @foreach (var item in ViewBag.listkc)
                {
                    <tr>
                        <td width="300">
                            <a href="@Url.Action("Edit", new { id = item.IDKICHCO })" style="font-weight:700; text-decoration:none" class="text-hover">
                                @item.TENKICHCO
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.IDKICHCO })" style="font-weight:700; text-decoration:none" class="text-hover">
                                @item.THETICH_TRONGLUONG
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>



