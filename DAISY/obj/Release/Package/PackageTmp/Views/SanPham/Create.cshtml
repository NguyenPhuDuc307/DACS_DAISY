@model DAISY.Models.tb_SANPHAM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 style="font-weight:700; margin-top:1rem">SẢN PHẨM</h4>
@Html.ActionLink("Trở về", "Index", "QuanLyAdmin")
<hr />

<div class="row">
    <div class="col-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Chọn loại sản phẩm

                <div class="col-md-10">
                    @Html.DropDownList("IDLOAISANPHAM", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDLOAISANPHAM, "", new { @class = "text-danger" })
                </div>
                <a style="text-decoration:none" href="@Url.Action("Create", "LoaiSanPham")">Nhấn vào đây nếu không có sẵn</a>
            </div>
            
            <div class="form-group">
                Tên sản phẩm
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TENSANPHAM, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TENSANPHAM, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Hình ảnh sản phẩm
                <div class="col-md-10">

                    <input name="HINHANH" id="HINHANH" class="form-control" value="" />

                    @Html.ValidationMessageFor(model => model.HINHANH, "", new { @class = "text-danger" })


                    <input type="file" name="fileUpload" id="fileUpload" accept="image/*" zz style="display:none;" />
                    <br />

                    <img src="~/Content/img/img-none.png" id="pictureUpload" class="img-none" style="height:270px; width:270px" />
                    @section upload
                {
                        <script>
                            $(function () {
                                $('#pictureUpload').click(function () {
                                    $('#fileUpload').trigger('click');
                                });
                            });
                            $('#fileUpload').change(function () {
                                if (window.FormData !== undefined) {
                                    var fileUpload = $('#fileUpload').get(0);
                                    var files = fileUpload.files;
                                    var formData = new FormData();
                                    formData.append('file', files[0]);
                                    $.ajax(
                                        {
                                            type: 'POST',
                                            url: '/SanPham/ProcessUpload',
                                            contentType: false,
                                            processData: false,
                                            data: formData,
                                            success: function (urlImage) {
                                                $('#pictureUpload').attr('src', urlImage);
                                                $('#HINHANH').val(urlImage);
                                            },
                                            error: function (err) {
                                                alert('Error ', err.statusText);

                                            }
                                        });
                                }
                            });
                        </script>
                    }


                </div>
            </div>

            <div class="form-group" style="margin-top:1rem">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm sản phẩm" class="btn btn-outline-danger" />
                </div>
            </div>
        </div>
        }
    </div>
    <div class="col-8">
        <table class="table table-striped-columns">
            <tr style="font-size:20px; color: red">
                <th>
                    TÊN LOẠI SẢN PHẨM
                </th>
                <th>
                    TÊN SẢN PHẨM
                </th>
                <th>
                    HÌNH ẢNH
                </th>
                <th>
                    TRẠNG THÁI
                </th>
            </tr>

            @foreach (var item in ViewBag.listsp)
            {
                <tr>
                    <td>
                        <h6 style="font-weight:700">
                            @item.tb_LOAISANPHAM.TENLOAISANPHAM
                        </h6>
                    </td>
                    <td>
                        <h6 style="font-weight:700">
                            @item.TENSANPHAM
                        </h6>

                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new {@id = item.IDSANPHAM})">
                            <img style="height:150px; width: 150px; object-fit:cover" src="@item.HINHANH" />
                        </a>
                    </td>
                    <td>

                        @if (item.TRANGTHAI == "Khả dụng")
                        {
                            <h6 style="font-weight: 700; color: green">@item.TRANGTHAI</h6>
                        }
                        else
                        {
                            <h6 style="font-weight: 700; color: red">@item.TRANGTHAI</h6>
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

        
