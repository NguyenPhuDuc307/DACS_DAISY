@model DAISY.Models.tb_CUAHANG

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:2rem">
    <h4 style=" font-weight: 700">THÔNG TIN CỬA HÀNG</h4>
    @Html.ActionLink("Trở về", "Index", "QuanLyAdmin")
    <hr />

    @if (@Model.XETDUYET == false)
    {
<div style="display:flex; margin:1rem">

    <svg style="color: green; margin-top:1px; margin-right: 4px" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
    </svg>
    <a style="text-decoration:none" href="@Url.Action("Xetduyet", "CuaHang", new {@id = Model.IDCUAHANG})">
        <h6 style="color: green; font-weight: 900" class="card-title">XÉT DUYỆT CHO CỬA HÀNG</h6>
    </a>
</div>
    }

    @if (@Model.UYTIN == true)
    {
        <div style="display:flex; margin:1rem">
            <svg style="color: dodgerblue; margin-top:1px; margin-right: 4px" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-patch-minus-fill" viewBox="0 0 16 16">
                <path d="M10.067.87a2.89 2.89 0 0 0-4.134 0l-.622.638-.89-.011a2.89 2.89 0 0 0-2.924 2.924l.01.89-.636.622a2.89 2.89 0 0 0 0 4.134l.637.622-.011.89a2.89 2.89 0 0 0 2.924 2.924l.89-.01.622.636a2.89 2.89 0 0 0 4.134 0l.622-.637.89.011a2.89 2.89 0 0 0 2.924-2.924l-.01-.89.636-.622a2.89 2.89 0 0 0 0-4.134l-.637-.622.011-.89a2.89 2.89 0 0 0-2.924-2.924l-.89.01-.622-.636zM6 7.5h4a.5.5 0 0 1 0 1H6a.5.5 0 0 1 0-1z" />
            </svg>
            <a style="text-decoration:none" href="@Url.Action("Uytin", "CuaHang", new {@id = Model.IDCUAHANG})">
                <h6 style="color: dodgerblue; font-weight: 900" class="card-title">XÓA HUY HIỆU CỬA HÀNG TÍCH CỰC</h6>
            </a>
        </div>
    }
    else
    {
        <div style="display:flex; margin:1rem">
            <svg style="color: dodgerblue; margin-top:1px; margin-right: 4px" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-patch-check-fill" viewBox="0 0 16 16">
                <path d="M10.067.87a2.89 2.89 0 0 0-4.134 0l-.622.638-.89-.011a2.89 2.89 0 0 0-2.924 2.924l.01.89-.636.622a2.89 2.89 0 0 0 0 4.134l.637.622-.011.89a2.89 2.89 0 0 0 2.924 2.924l.89-.01.622.636a2.89 2.89 0 0 0 4.134 0l.622-.637.89.011a2.89 2.89 0 0 0 2.924-2.924l-.01-.89.636-.622a2.89 2.89 0 0 0 0-4.134l-.637-.622.011-.89a2.89 2.89 0 0 0-2.924-2.924l-.89.01-.622-.636zm.287 5.984-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7 8.793l2.646-2.647a.5.5 0 0 1 .708.708z" />
            </svg>
            <a style="text-decoration:none" href="@Url.Action("Uytin", "CuaHang", new {@id = Model.IDCUAHANG})">
                <h6 style="color: dodgerblue; font-weight: 900" class="card-title">CẤP HUY HIỆU CỬA HÀNG TÍCH CỰC?</h6>
            </a>
        </div>
    }

    @if (@Model.DINHCHI == true)
    {
        <div style="display:flex; margin:1rem; margin-top:0">
            <svg style="margin-top:1px; margin-right: 4px; color:red" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-dash-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM4.5 7.5a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1h-7z" />
            </svg>
            <a style="text-decoration:none" href="@Url.Action("Dinhchi", "CuaHang", new {@id = Model.IDCUAHANG})">
                <h6 style="color:red; font-weight:900" class="card-title">CỬA HÀNG ĐÃ BỊ ĐÌNH CHỈ HOẠT ĐỘNG</h6>
            </a>
        </div>
    }
    else
    {
        <div style="display:flex; margin:1rem; margin-top:0">
            <svg style="margin-top:1px; margin-right: 4px; color:red" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-dash-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM4.5 7.5a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1h-7z" />
            </svg>
            <a style="text-decoration:none" href="@Url.Action("Dinhchi", "CuaHang", new {@id = Model.IDCUAHANG})">
                <h6 style="color:red; font-weight:900" class="card-title">TẠM ĐÌNH CHỈ HOẠT ĐỘNG CỬA HÀNG?</h6>
            </a>
        </div>
    }


    <img style="padding:1rem; border-radius:1rem; height:300px; object-fit:cover" src="@Model.HINHANH" class="card-img-top" alt="...">
    <div class="card-body" style="font-weight: 700">



        <div class="row justify-content-md-center">
            <div class="col-6" style="text-align:center">
                @if (@Model.TRANGTHAI == "Đang hoạt động")
                {
                    <h5 style="color:green; font-weight:700" class="card-title">Trạng thái: @Model.TRANGTHAI</h5>
                }
                else
                {
                    <h5 style="color: red; font-weight: 700" class="card-title">Trạng thái: @Model.TRANGTHAI</h5>
                }

                <h5 class="card-title">Tên cửa hàng: @Model.TENCUAHANG</h5>

                <img src="@Model.AspNetUsers.Image" style="height:200px; width: 200px; border-radius:100%; border: 5px; border-style: solid; border-color:lightgray; margin:1rem" />

                <h5 class="card-title">Đại diện cửa hàng: @Model.AspNetUsers.Name</h5>

                <h5 class="card-title">Địa chỉ Email: @Model.AspNetUsers.Email</h5>

                <h5 class="card-title">Số điện thoại: @Model.AspNetUsers.PhoneNumber</h5>



                <h6 class="card-title">Địa chỉ: @Model.AspNetUsers.Diachi</h6>

            </div>
            <div class="col-6" style="text-align:center">
                <iframe src="@Model.GOOGLEMAP" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

        </div>


    </div>
</div>