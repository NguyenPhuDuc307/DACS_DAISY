@model DAISY.Models.SetPasswordViewModel
@{
    ViewBag.Title = "Tạo mật khẩu";
}

<h2 style="margin-top:1rem">@ViewBag.Title.</h2>
<p class="text-info">
    Bạn không có tên người dùng / mật khẩu cục bộ cho trang web này. Thêm tài khoản cục bộ để bạn có thể đăng nhập mà không cần đăng nhập bên ngoài.
</p>

@using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>Tạo thông tin đăng nhập cục bộ</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-floating mb-3">
        @Html.PasswordFor(m => m.NewPassword, new { @type = "password", @class = "form-control", @id = "floatingPassword", @placeholder = "Password" })
        <label for="floatingPassword">Mật khẩu</label>
    </div>

    <div class="form-floating mb-3">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @type = "password", @class = "form-control", @id = "floatingPasswordXN", @placeholder = "Xác nhận mật khẩu" })
        <label for="floatingPasswordXN">Xác nhận mật khẩu</label>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Đặt mật khẩu" class="btn btn-primary" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}