@model DAISY.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 style="margin-top: 1rem">Đăng ký để cùng <b style="color:red">DAISY</b> order thả ga nhé!</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-floating mb-3">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "floatingName", @placeholder = "Họ tên" })
        <label for="floatingName">Họ tên</label>
    </div>

    @*<div class="form-floating mb-3">
        @Html.TextBoxFor(m => m.Image, new { @class = "form-control", @id = "floatingImage", @placeholder = "Ảnh đại diện" })
        <label for="floatingImage">Ảnh đại diện</label>
    </div>*@

    <div class="form-floating mb-3">
        @Html.TextBoxFor(m => m.Email, new { @type = "email", @class = "form-control", @id = "floatingEmail", @placeholder = "name@example.com" })
        <label for="floatingEmail">Địa chỉ Email</label>
    </div>

    <div class="form-floating mb-3">
        @Html.TextBoxFor(m => m.Password, new { @type = "password", @class = "form-control", @id = "floatingPassword", @placeholder = "Password" })
        <label for="floatingPassword">Mật khẩu</label>
    </div>

    <div class="form-floating mb-3">
        @Html.TextBoxFor(m => m.ConfirmPassword, new { @type = "password", @class = "form-control", @id = "floatingPasswordXN", @placeholder = "Xác nhận mật khẩu" })
        <label for="floatingPasswordXN">Xác nhận mật khẩu</label>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary mb-3">Đăng ký</button>
        </div>
    </div>
    <p>
        @Html.ActionLink("Tôi đã có tài khoản", "Login")
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
